<%- include("./partials/header"); %>


  <main id="main" class="main">

    <div class="pagetitle">

      <h1>Deposit</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item active">Deposit</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <%- include ('./partials/messages') %>


    

        <!-- Left side columns -->
        
        <section class="section dashboard">
        <div class="row">

            <!-- Sales Card -->
            <% if (deposit == 0) { %>
                <p style="font-size: 30px; text-align: center;">NO DEPOSIT REQUEST</p>
                <% }else{%>
                    
                         
                    <div class="col-lg-8">
                        <div class="row">
                    <% deposit.forEach(function(deposit){ %>
                        <div class="col-xxl-4 col-md-6">
                            <div class="card info-card sales-card">
              
                              
              
                              <div class="card-body">
                                <h5 class="card-title"><%= deposit.email %></h5>


                                <h5 class="card-title"><%= deposit.amount %></h5>
                                <h5 class="card-title"><%= deposit.senderName %></h5>
                                <h5 class="card-title"><%= deposit.narration %></h5>
                                <img
                                class="max-w-sm rounded border bg-white p-1 dark:border-neutral-700 dark:bg-neutral-800"
                                alt="..." />

     
              
                                <div class="d-flex align-items-center">
                                 
                                  <div class="ps-3">
                                    <p></p>


                                    <form action="/deleteDeposit/<%= deposit._id%>?_method=DELETE" method="POST">
                                        <button style="margin-top: 10px;" class="btn btn-danger">Delete</button>
                                      </form> 
                                  </div>
                                </div>
                              </div>
              
                            </div>
                          </div><!-- End Sales Card -->

                        
            
                    <% }); %>
                </div>
            
                <% } %>
            <!--  -->
           
             


            
            <!-- Recent Sales -->
            <div class="col-12">
              <div class="card recent-sales overflow-auto">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                    </li>

                    
                  </ul>
                </div>


              </div>
            </div><!-- End Recent Sales -->

           
          </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

          <!-- Recent Activity -->
         
      
      
        </div><!-- End Right side columns -->
      
      </div>
      </section>
      
      </main><!-- End #main -->
 
      
